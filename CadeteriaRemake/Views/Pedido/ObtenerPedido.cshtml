@model CadeteriaRemake.ViewModels.EditarPedidoViewModel;
<form asp-action="ModificacionPedido" method="post" class="form col-sm-12 col-md-8 col-lg-6 mx-auto shadow p-3 mb-4 bg-white rounded aplicable">
    <div class="form-group">
        <label asp-for="@Model.observacion"></label>
        <textarea class="form-control" placeholder="Ingrese la observacion" asp-for="@Model.observacion">@Model.observacion</textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.tipoPedido">Tipo de Pedido</label>
        <select class="form-control" asp-for="@Model.tipoPedido">
            <option value="0">expres</option>
            <option value="1">dedicado</option>
            <option value="2">ecologico</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.estado_pedido">Estado</label>
        <select class="form-control" asp-for="@Model.estado_pedido">
            <option value="true">Enviado</option>
            <option value="false">Pendiente</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.cupon">Cupon</label>
        <select class="form-control" asp-for="@Model.cupon">
            <option value="true">Si</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CadeteId">Cadete</label>
        <select asp-for="CadeteId" asp-items="@Model.cadetes" class="form-control"></select>
    </div>
    <input type="hidden" asp-for="numero" value="@Model.numero" />
    <button type="submit" class="btn btn-block btn-primary">Modificar</button>
</form>